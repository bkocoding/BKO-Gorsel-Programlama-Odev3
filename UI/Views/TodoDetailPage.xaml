<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:UI.ViewModels"
             x:Class="UI.Views.TodoDetailPage"
             Title="{Binding Title}">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            
            <Label Text="Görev Başlığı" FontAttributes="Bold"/>
            <Entry Text="{Binding TaskTitle}" Placeholder="Örn: Final Ödevi"/>

            <Label Text="Detaylar" FontAttributes="Bold"/>
            <Editor Text="{Binding TaskDetail}" Placeholder="Detayları buraya yazın..." HeightRequest="100"/>

            <Label Text="Tarih ve Saat" FontAttributes="Bold"/>
            <HorizontalStackLayout Spacing="10">
                <DatePicker Date="{Binding TaskDate}" Format="dd.MM.yyyy"/>
                <TimePicker Time="{Binding TaskTime}" Format="HH:mm"/>
            </HorizontalStackLayout>

            <Button Text="KAYDET" 
                    Command="{Binding SaveTaskCommand}" 
                    BackgroundColor="{StaticResource Primary}" 
                    TextColor="White"
                    CornerRadius="10"
                    Margin="0,20"/>
            
            <ActivityIndicator IsRunning="{Binding IsBusy}" Color="{StaticResource Primary}"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>