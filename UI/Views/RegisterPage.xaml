<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UI.Views.RegisterPage"
             Shell.NavBarIsVisible="False">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="Center">

            <Label Text="Yeni Hesap Oluştur"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="{StaticResource Primary}"
                   HorizontalOptions="Center" />

            <Border Style="{StaticResource CardBorderStyle}"
                    Padding="0">
                <Entry Placeholder="Kullanıcı Adı"
                       Text="{Binding DisplayName}"
                       TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight},
                       Dark={StaticResource TextPrimaryDark}}"
                       Margin="10,0"
                       BackgroundColor="Transparent" />
            </Border>

            <Border Style="{StaticResource CardBorderStyle}"
                    Padding="0">
                <Entry Placeholder="Email Adresi"
                       Text="{Binding Email}"
                       TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight},
                       Dark={StaticResource TextPrimaryDark}}"
                       Keyboard="Email"
                       Margin="10,0"
                       BackgroundColor="Transparent" />
            </Border>

            <Border Style="{StaticResource CardBorderStyle}"
                    Padding="0">
                <Entry Placeholder="Şifre"
                       Text="{Binding Password}"
                       TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight},
                       Dark={StaticResource TextPrimaryDark}}"
                       IsPassword="True"
                       Margin="10,0"
                       BackgroundColor="Transparent" />
            </Border>

            <ActivityIndicator IsRunning="{Binding IsBusy}"
                               IsVisible="{Binding IsBusy}"
                               Color="{StaticResource Primary}" />

            <Button Text="Kaydol"
                    Command="{Binding RegisterCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="{StaticResource White}"
                    CornerRadius="20"
                    HeightRequest="50"
                    FontAttributes="Bold" />

            <HorizontalStackLayout HorizontalOptions="Center"
                                   Spacing="0"
                                   VerticalOptions="Center">

                <Label Text="Zaten bir hesabın var mı?"
                       TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight},
                       Dark={StaticResource TextSecondaryDark}}"
                       VerticalOptions="Center" />

                <Button Text="Giriş Yap"
                        Command="{Binding GoToLoginCommand}"
                        BackgroundColor="Transparent"
                        TextColor="{StaticResource Primary}"
                        FontAttributes="Bold"
                        HeightRequest="40"
                        Padding="5,0"
                        VerticalOptions="Center" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>